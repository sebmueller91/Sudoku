<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical" >

    <GridLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/SudokuGridLayout"
        android:layout_marginTop="10dp"
        android:layout_width="405dp"
        android:layout_height="405dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_centerHorizontal="true"
        android:columnCount="9"
        android:rowCount="9"
        android:orientation="horizontal"
        android:stateListAnimator="@null"
        tools:context=".GridXMLActivity">
    </GridLayout>
    <GridLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:rowCount="1">

        <Button
            android:id="@+id/userButton1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="1" />

        <Button
            android:id="@+id/userButton2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="2" />
        <Button
            android:id="@+id/userButton3"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="3" />
        <Button
            android:id="@+id/userButton4"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="4" />
        <Button
            android:id="@+id/userButton5"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="5" />
        <Button
            android:id="@+id/userButton6"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="6" />
        <Button
            android:id="@+id/userButton7"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="7" />
        <Button
            android:id="@+id/userButton8"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="8" />
        <Button
            android:id="@+id/userButton9"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="8"
            android:layout_height="wrap_content"
            android:background="@drawable/input_button"
            android:textColor="#3063f7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:text="9" />
    </GridLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/makeNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="\u270E"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clearCellButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/menu_button"
            android:textColor="#ffffff"
            android:text="CLEAR CELL" />
        <Button
        android:id="@+id/checkSolutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textColor="#ffffff"
        android:background="@drawable/menu_button"
        android:text="Check solution" />
        <Button
            android:id="@+id/preferencesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/menu_button"
            android:text="P" />
    </LinearLayout>

</LinearLayout>